{
  "compilerOptions": {
    "target": "es6",                                  
    "module": "commonjs",                              
    "jsx": "react",                                   
    "strict": true,                                    
    "esModuleInterop": true,                           
    "skipLibCheck": true,                              
    "forceConsistentCasingInFileNames": true,          
    "baseUrl": ".",                                    
    "paths": {
      "*": ["types/*"]                                
    }
  },
  "include": ["src/**/*"],                             
  "exclude": ["node_modules", "build"]                 
}